<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows10.0.17763.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<ApplicationIcon>res/icon.ico</ApplicationIcon>
	<Version>1.0.0</Version>
    <Authors>Dumbelfo</Authors>
    <Company>AshProject</Company>
	<PackageDescription>For sending love flowers</PackageDescription>
	<RepositoryUrl>https://github.com/Dumbelfo08/TwentySecondGarden</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AshLib" Version="2.1.0" />
    <PackageReference Include="Discord.Net" Version="3.15.3" />
    <PackageReference Include="Microsoft.Toolkit.Uwp.Notifications" Version="7.1.3" />
	<PackageReference Include="System.Windows.Extensions" Version="8.0.0" />
    <EmbeddedResource Include="res/notif.wav" />

  </ItemGroup>

</Project>
